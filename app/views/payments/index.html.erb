<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Paid at</th>
      <th>Signature</th>
      <th>Amount</th>
      <th>Photo url</th>
      <th>Comment text</th>
      <th>Fundraiser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.paid_at %></td>
        <td><%= payment.signature %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.photo_url %></td>
        <td><%= payment.comment_text %></td>
        <td><%= payment.fundraiser %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

